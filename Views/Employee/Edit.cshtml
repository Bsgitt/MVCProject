@model BollMVC.Models.EmployeeData
@{
    ViewBag.Title = "Edit";
}
@section Styles
    {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.min.css" />
}
<h2>Edit</h2>
@using (Html.BeginForm("edit", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.firstname, "ชื่อพนักงาน")
        @Html.TextBoxFor(model => model.firstname, new { @class = "form-control", placeholder = "กรอกชื่อภาพยนตร์" })
        @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.lastname, "นามสุกล")
        @Html.TextBoxFor(model => model.lastname, new { @class = "form-control", placeholder = "กรอกนามสกุลพนักงาน" })
        @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.releaseDate, "เกิดวันที่/เดือน/ปี")
        <div class='input-group date' id='dtReleaseDate'>
            @Html.TextBoxFor(model => model.releaseDate, new { @class = "form-control", placeholder = "ระบุวันที่/เดือน/ปี" })
            @Html.ValidationMessageFor(model => model.releaseDate, "", new { @class = "text-danger" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.position, "ตำแหน่ง")
        @Html.DropDownListFor(m => m.position, new List<SelectListItem>
        {
        new SelectListItem { Text="CEO", Value="CEO" },
        new SelectListItem { Text="Dev", Value="Dev" }
        }, "กรุณาเลือก", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.position, "", new { @class = "text-danger" })
    </div>
    //change salary
   <div class="form-group">
        @Html.LabelFor(model => model.salary, "เลือกเงินเดือน")
        @Html.DropDownListFor(m => m.salary, new List<SelectListItem>
        {
        new SelectListItem { Text="1000K", Value="1000K" },
        new SelectListItem { Text="500K", Value="500K" }
        }, "กรุณาเลือก", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.salary, "", new { @class = "text-danger" })
    </div>
    // input Age
      <div class="form-group">
        @Html.LabelFor(model => model.age, "ระบุอายุ")
        @Html.DropDownListFor(m => m.age, new List<SelectListItem>
        {
        new SelectListItem { Text="20", Value="20" },
        new SelectListItem { Text="21", Value="21" },
        new SelectListItem { Text="22", Value="22" },
        new SelectListItem { Text="23", Value="23" }
        }, "กรุณาเลือก", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
    </div>
    // input Address
    <div class="form-group">
        @Html.LabelFor(model => model.address, "กรุณากรอกที่อยู่")
        @Html.TextAreaFor(m => m.address, new { @class = "form-control", placeholder = "ที่อยู่สำหรับติดต่อ" })
        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
    </div>



    <div class="form-group">
        @Html.Label("fileCoverImg", "รูปภาพ")
        <input type="file" id="fileUpload" name="fileUpload" class="form-control" />
        <lable class="text-danger">
            @Html.ValidationMessage("errFileUpload")
        </lable>
    </div>
    <div class=form-group>
        <img src="@Url.Content(Model.coverImg)" class="img-responsive" />
    </div>
    <div class=form-group>
        <input onclick="return validateOnSubmit()" type="submit" value="Update" class="btn btn-primary" />
    </div>
}
@section Scripts
{
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
    <script type="text/javascript">
        $(function() {
            $('#dtReleaseDate').datetimepicker({
                defaultDate: new Date(),
            });
        });
        function validateOnSubmit() {
            if (!$('#duration').val()) {
                $('span[data-valmsg-for="errDuration"]').text('The duration is required.');
            }
        }
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
}